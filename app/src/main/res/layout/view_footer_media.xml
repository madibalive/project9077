<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/md_bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <com.example.madiba.venu_alpha.ui.HashTagTextView
        android:id="@+id/md_hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#HashTagProftas sadasasdadad"
        style="@style/veneTitleText"
        android:padding="10dp"
        android:textSize="@dimen/app_text_size_large"
        />

    <TextView
        android:layout_below="@id/md_hashtag"
        android:foregroundGravity=""
        android:textStyle="bold"
        android:drawablePadding="@dimen/dp_4"
        android:drawableLeft="@drawable/ic_heart"
        android:padding="10dp"
        android:id="@+id/md_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12" />

    <TextView
        android:foregroundGravity=""
        android:textStyle="bold"
        android:drawablePadding="@dimen/dp_4"
        android:drawableLeft="@drawable/ic_return"
        android:padding="10dp"
        android:layout_toRightOf="@id/md_cnt"
        android:layout_alignTop="@id/md_cnt"
        android:id="@+id/md_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12" />



    <TextView
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/md_cnt"
        android:textStyle="bold"
        android:drawablePadding="@dimen/dp_4"
        android:drawableLeft="@drawable/ic_chat_2"
        android:padding="10dp"
        android:id="@+id/md_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12" />







</RelativeLayout>
