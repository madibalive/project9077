<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/bare_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground"
        android:importantForAccessibility="yes">


        <TextView
            android:text="Entertainment"
            android:id="@+id/bare_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start|left"
            style="@style/veneTitleText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:text="See all"
            android:id="@+id/bare_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_normal"
            android:layout_marginRight="@dimen/padding_normal"
            android:layout_marginTop="@dimen/padding_normal"
            android:layout_gravity="top|end|right"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/bare_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />


</LinearLayout>
