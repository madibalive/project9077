<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius_0dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground"
        android:importantForAccessibility="yes">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <TextView
            android:text="Entertainment"
            android:id="@+id/card_container_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start|left"
            style="@style/veneTitleText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:text="See all"
            android:id="@+id/card_container_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_normal"
            android:layout_marginRight="@dimen/padding_normal"
            android:layout_marginTop="@dimen/padding_normal"
            android:layout_gravity="top|end|right"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cards_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/compact_list_tile"
        android:layout_marginTop="50dp"
        android:scrollbars="horizontal"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarSize="4dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:orientation="horizontal" />



</android.support.v7.widget.CardView>
