<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/card_corner_radius_0dp"
    app:contentPadding="@dimen/padding_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/app_text_size_large"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:id="@+id/my_event_date"
            android:background="@color/light_grey_200"
            android:text="22"
            android:layout_width="45dp"
            android:layout_height="70dp" />

        <TextView
            android:maxLines="2"
            android:layout_toRightOf="@id/my_event_date"
            android:id="@+id/my_event_title"
            android:textColor="@color/black"
            android:text="tion in world of AI (or anything really sdsbeyond #sgatata "
            android:layout_marginRight="20dp"
            android:textSize="@dimen/app_text_size_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/my_event_title"
            android:layout_marginTop="@dimen/dp_4"
            android:id="@+id/my_event_location"
            android:layout_toRightOf="@id/my_event_date"
            android:text="Location East Adenta"
            android:textSize="@dimen/app_text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/my_event_location"
            android:layout_toRightOf="@id/my_event_date"
            android:text="9:20 pm"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_size_small"
            android:id="@+id/my_event_time" />


        <TextView
            android:drawableTint="@color/venu_flat_color"
            android:drawableTop="@drawable/ic_tag"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/app_text_size_medium"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:id="@+id/my_event_tag"
            android:text="free"
            android:layout_width="45dp"
            android:layout_height="wrap_content" />


        <ImageButton
            android:background="@android:color/transparent"
            android:src="@drawable/ic_line_chart"
            android:layout_below="@id/my_event_date"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/app_text_size_large"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:id="@+id/my_event_trending"
            android:layout_width="70dp"
            android:layout_height="70dp" />


        <TextView
            android:drawableRight="@drawable/ic_star"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignTop="@id/my_event_trending"
            android:layout_toRightOf="@id/my_event_trending"
            android:id="@+id/my_event_favs"
            android:text="824k  "
            style="@style/veneTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/my_event_comments"
            android:drawableRight="@drawable/ic_chat"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignTop="@id/my_event_trending"
            android:layout_toRightOf="@id/my_event_favs"
            android:text="12m  "
            style="@style/veneTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/my_event_action"
            android:textSize="@dimen/app_text_size_small"
            android:gravity="center"
            android:text="Action"
            android:layout_below="@id/my_event_trending"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_overflow"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>




</android.support.v7.widget.CardView>
