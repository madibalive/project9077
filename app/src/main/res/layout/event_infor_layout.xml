<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date_day"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="22"
            android:textColor="@color/dark_grey"
            android:textSize="60sp" />


        <TextView
            android:id="@+id/date_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/date_day"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/date_day"
            android:text="December"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_month"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/date_day"
            android:text="12:20 PM"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </RelativeLayout>


    <TextView
        android:id="@+id/event_page_location"
        style="@style/veneProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_placeholder"
        android:drawablePadding="8dp"
        android:text="4th street rooad ,21 avaenu road"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/mid_grey_200" />

</LinearLayout>